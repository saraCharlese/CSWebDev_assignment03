<p id="notice"><%= notice %></p>

<h1>Departments</h1>

<table>
  <%= def search_departments_url
        # code here
      end
      form_tag(search_departments_url, method: "get") do  %>
    <%= label_tag(:name, "Search for Departments: ") %>
    <%= text_field_tag(:name) %>
    <%= submit_tag("Search") %>
  <% end %>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @departments.each do |department| %>
      <tr>
        <td><%= department.name %></td>
        <td><%= link_to 'Show', department %></td>
        <td><%= link_to 'Edit', edit_department_path(department) %></td>
        <td><%= link_to 'Destroy', department, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Department', new_department_path %>
